# EditorConfig: https://EditorConfig.org

# トップレベル設定
root = true

# すべてのファイルに適用
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Go ファイル
[*.go]
indent_style = tab
indent_size = 4

# YAML ファイル
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown ファイル
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Makefile
[Makefile]
indent_style = tab

# Shell スクリプト
[*.sh]
indent_style = space
indent_size = 2

# JSON ファイル
[*.json]
indent_style = space
indent_size = 2
